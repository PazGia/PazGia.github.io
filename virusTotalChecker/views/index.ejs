<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>VirusTotal Hash Checker</title>
  <link rel="stylesheet" href="/styles.css">
</head>
<body>
  <div class="container">
    <h1>VirusTotal Hash Checker</h1>
    <form action="/check-hashes" method="POST">
      <label for="hashes">Enter Hashes:</label>
      <textarea id="hashes" name="hashes" rows="10" required></textarea>
      <button type="submit">Process</button>
      <button type="button" onclick="clearInput()">Clear</button>
    </form>
    <form action="/clear-results" method="POST" id="clearResultsForm" style="display:none;">
      <input type="hidden" name="clear" value="true">
    </form>
    <% if (results) { %>
      <div class="results">
        <h2>To Block</h2>
        <ul id="blockList">
          <% results.block.forEach(hash => { %>
            <li><%= hash %></li>
          <% }) %>
        </ul>
        <button onclick="copyToClipboard('blockList')">Copy</button>

        <h2>Not to Block</h2>
        <ul id="noBlockList">
          <% results.noBlock.forEach(hash => { %>
            <li><%= hash %></li>
          <% }) %>
        </ul>
        <button onclick="copyToClipboard('noBlockList')">Copy</button>

        <h2>Invalid Hashes</h2>
        <ul id="invalidList">
          <% results.invalid.forEach(hash => { %>
            <li><%= hash %></li>
          <% }) %>
        </ul>
        <button onclick="copyToClipboard('invalidList')">Copy</button>

        <h2>Undetected by All Vendors</h2>
        <ul id="undetectedList">
          <% if (results.undetected) { %>
            <% results.undetected.forEach(hash => { %>
              <li><%= hash %></li>
            <% }) %>
          <% } %>
        </ul>
        <button onclick="copyToClipboard('undetectedList')">Copy</button>
      </div>
    <% } %>
  </div>
  <script src="/scripts.js"></script>
</body>
</html>
